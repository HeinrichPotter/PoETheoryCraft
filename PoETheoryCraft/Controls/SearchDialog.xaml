<Window x:Class="PoETheoryCraft.Controls.SearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoETheoryCraft.Controls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="Search/Filter WIP - Nothing to see here, yet." Height="600" Width="900">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button Width="80" Margin="5,0,0,5" IsCancel="True">Cancel</Button>
                <Button Width="80" Margin="5,0,0,5" Name="OKButton" IsDefault="True" Click="OK_Click">OK</Button>
                <Button Width="80" Margin="5,0,0,5" Click="Clear_Click">Clear</Button>
            </StackPanel>
            <DockPanel DockPanel.Dock="Right" Width="500">
                <TextBox Name="SearchBox" DockPanel.Dock="Top" TextChanged="Search_TextChanged"></TextBox>
                <ListView ScrollViewer.VerticalScrollBarVisibility="Visible" Name="StatsView"></ListView>
            </DockPanel>
            <StackPanel Background="AliceBlue"></StackPanel>
        </DockPanel>
    </Grid>
</Window>
