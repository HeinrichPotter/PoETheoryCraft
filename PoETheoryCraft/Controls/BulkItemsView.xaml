        <ContextMenu>
            <MenuItem Header="Copy this page to clipboard" Click="ClipboardPage_Click"/>
            <MenuItem Header="Copy all results to clipboard" Click="ClipboardAll_Click"/>
        </ContextMenu>
    </UserControl.ContextMenu>
