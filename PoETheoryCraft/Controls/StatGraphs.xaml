<Window x:Class="PoETheoryCraft.Controls.StatGraphs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoETheoryCraft.Controls"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="StatGraphs" Height="450" Width="800">
    <Grid>
        <lvc:CartesianChart Grid.Row="1" DisableAnimations="True" LegendLocation="None">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="Count:" Values="{Binding CDF}" LineSmoothness="0">
                </lvc:LineSeries>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis FontSize="18" FontWeight="Bold" Title="# Items"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis FontSize="18" FontWeight="Bold" Title="Stat" Name="StatName"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
    </Grid>
</Window>
